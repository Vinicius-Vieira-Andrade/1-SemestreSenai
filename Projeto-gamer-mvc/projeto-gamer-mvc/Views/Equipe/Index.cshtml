@model Equipe //acessa dados referentes a classe equipe C# so que nesse arquivo cshtml atraves do razor

@{
    ViewData["Title"] = "Equipe";
}

<h1>Tela de Equipes</h1>




<form method='post' action="@Url.Action("Cadastrar")" enctype="multipart/form-data"> //obrigat√≥rio usar enctype para upload de arquivo
    <label for="">Nome</label>
    <input type="text" name="Nome" required>

    <label for="">Imagem</label>
    <input type="file" name="Imagem" required>

    <button type="submit">Cadastrar</button>

</form>




<table class="table table-striped table-responsive">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Imagem</th>
    </thead>

    <tbody>

        @foreach (Equipe eq in ViewBag.Equipe)
        {

            <tr>
                <td>@eq.IdEquipe</td>
                <td>@eq.Nome</td>
                <td>@eq.Imagem</td>
            </tr>

        }



    </tbody>
</table>