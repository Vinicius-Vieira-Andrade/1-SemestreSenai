@model Equipe //acessa dados referentes a classe equipe C# so que nesse arquivo cshtml atraves do razor

@{
    ViewData["Title"] = "Equipe";
}

<link rel="stylesheet" href="~/css/equipe.css">

<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">


        @if (ViewBag.UserName == null)
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
        }

        else
        {
            <form class="frm-cad-equipe" method='post' action="@Url.Action("Cadastrar")" enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Equipes</h1>
                    <hr>
                </div>


                @* <input class="campo-entrada" type="number" id="idEquipe" placeholder="Digite o Id da sua equipe:"> *@
                <input class="campo-entrada" type="text" placeholder="Digite o nome da sua equipe:" name="Nome" required>
                <label class="foto" for="foto-file">
                    Nenuma imagem selecionada...
                    <input type="file" id="foto-file" name="Imagem">
                </label>

                <button>Cadastro</button>



                <!-- <select class="equipeid" id="equipeid">
                                                                        <option value="">Selecione uma Equipe</option>
                                                                        <option value="x">Equipe X</option>
                                                                        <option value="y">Equipe Y</option>
                                                                    </select> -->
            </form>

            <!-- TABELA CADASTRO DE EQUIPES -->

            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Imagem</th>
                        <th>Ações;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Equipe eq in ViewBag.Equipe)
                    {
                        <tr>
                            <td>@eq.IdEquipe</td>
                            <td>@eq.Nome</td>
                            <td>
                                <img src="/img/Equipes/@eq.Imagem" alt="imagem da equipe @eq.Nome" width="50px">
                            </td>

                            <td>
                                <a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@eq.IdEquipe">
                                    <img class="yellow-trash" src="~/assets/trash.png" alt="">
                                </a>
    
                                <a asp-area="" asp-controller="Equipe" asp-action="Editar"
                                    asp-route-id="@eq.IdEquipe">Editar</a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        }



    </section>
</main>



