@model Equipe

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/equipe.css">

<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">


        @if (ViewBag.UserName == null)
        {
            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
        }

        else
        {
            <form class="frm-cad-equipe" method='post' action="@Url.Action("Atualizar")" enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Edição de equipes</h1>
                    <hr>
                </div>


                <input type="hidden" name="IdEquipe" value="@ViewBag.Equipe.IdEquipe"> @*acha o id da equipe pela viewbag q
            esta
            guardada os dados referente ao objeto/equipe*@
                <input class="campo-entrada" type="text" placeholder="Digite o nome da sua equipe:" name="Nome"
                    value="@ViewBag.Equipe.Nome" required>
                <label class="foto" for="foto-file">
                    Nenuma imagem selecionada...
                    <input type="file" id="foto-file" name="Imagem" value="@ViewBag.Equipe.Imagem">
                </label>

                <button>Atualizar</button>
            </form>

        }
    </section>
</main>

